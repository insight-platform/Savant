{
  "name": "my-savant-module",
  "build": {
    "dockerfile": "../../docker/Dockerfile.x86",
    "context": "../.."
  },
  "customizations": {
    "vscode": {
      "extensions": [
        "ms-python.python",
        "ms-python.vscode-pylance"
      ]
    }
  },
  "workspaceMount": "source=${localWorkspaceFolder}/module,target=/opt/savant/module,type=bind",
  "workspaceFolder": "/opt/savant/module",
  "runArgs": [ "--gpus=all" ]
}
